package tanks.game.display;

import java.awt.Canvas;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.awt.image.DataBufferInt;

import javax.swing.JFrame;

public abstract class Display{
	private static boolean created = false;
	private static JFrame window;
	private static Canvas content;
	
	private static BufferedImage bufferImage;
	private static int[] bufferData;
	private static Graphics graphicsImage;
	private static int clerColor;

	public static void create(int width, int height, String title, int clerColor){
		
		if (created) {
			return;
		}
		
		window = new JFrame(title);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		content = new Canvas();
		
		window.setResizable(false);
		window.getContentPane().add(content);
		window.pack();
		window.setLocationRelativeTo(null);
		window.setVisible(true);
		
		bufferImage = new BufferedImage(width, height, BufferedImage.TYPE_INT_ARGB);
		bufferData = ((DataBufferInt)(bufferImage.getRaster().getDataBuffer())).getData();
	}

	
}
