package tanks.game;

import java.awt.event.ActionEvent;
import java.awt.*;
import javax.swing.*;

import tanks.game.display.Display;

public class Main{

	public static void main(String[] args){

		Display.create(800, 600, "Tanks-GAME", 0xff00ff00, 3);

		Timer timer = new Timer(1000 / 60, new AbstractAction(){
			public void actionPerformed(ActionEvent e){
				Display.clear();
				Display.render();

				Display.swapBuffer();
			}
		});
		timer.setRepeats(true);
		timer.start();
	}

}
