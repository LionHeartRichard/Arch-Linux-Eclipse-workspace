package tanks.game.entitygame;

import java.awt.Graphics2D;
import java.util.Map;

import tanks.game.myinput.MyInput;
import tanks.game.textures.MyPicture;

public class Player extends EntityGame {

	public static final int PICTURE_SCALER = 16;

	private enum directionTank {
		NORTH(0 * PICTURE_SCALER, 0 * PICTURE_SCALER, PICTURE_SCALER, PICTURE_SCALER),
		SOUTH(0 * PICTURE_SCALER, 0 * PICTURE_SCALER, PICTURE_SCALER, PICTURE_SCALER),
		EAST(0 * PICTURE_SCALER, 0 * PICTURE_SCALER, PICTURE_SCALER, PICTURE_SCALER),
		WEST(0 * PICTURE_SCALER, 0 * PICTURE_SCALER, PICTURE_SCALER, PICTURE_SCALER);

		private int x, y, w, h;

		private directionTank(int x, int y, int w, int h) {
			this.x = x;
			this.y = y;
			this.w = w;
			this.h = h;
		}

	}

	private directionTank direction;
	private Map<directionTank, MyPicture> pictersMap;

	public Player(float x, float y) {
		super(EntityType.PLAYER, x, y);
	}

	@Override
	protected void update(MyInput myInput) {
		// TODO Auto-generated method stub

	}

	@Override
	protected void render(Graphics2D g) {
		// TODO Auto-generated method stub

	}

}
